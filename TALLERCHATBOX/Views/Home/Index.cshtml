@model ChatViewModel
@{
    ViewBag.Title = "CordovaBOT";
}

<h2 class="text-center">CordovaBOT - Tu asistente inteligente</h2>

<div class="card-container">
    <div class="card">
        <img src="~/Images/miembro1.jpg" />
        <h4>Nombre Apellido</h4>
        <p><strong>Correo:</strong> miembro@email.com</p>
        <p><strong>Intereses:</strong> IA, desarrollo web</p>
    </div>
</div>

<form method="post">
    <div>
        <label>Selecciona el proveedor:</label>
        <select name="Proveedor" class="form-control">
            <option value="gemini">Gemini</option>
            <option value="chatgpt">ChatGPT</option>
        </select>
    </div>
    <div>
        <label>Pregunta:</label>
        <input name="Pregunta" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Enviar</button>
</form>

@if (Model.Respuesta != null)
{
    <div class="alert alert-success mt-3">
        <strong>Respuesta:</strong> @Model.Respuesta
    </div>
}
